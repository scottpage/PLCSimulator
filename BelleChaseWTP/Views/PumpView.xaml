<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BelleChaseWTP"
             x:Class="PumpView"
             mc:Ignorable="d">
    <!--<UserControl.DataContext>
        <local:PumpViewModel />
    </UserControl.DataContext>-->
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Auto:"
                           MinWidth="100" />
                <Button MinWidth="75"
                        Content="{Binding IsAuto, UpdateSourceTrigger=PropertyChanged}"
                        Command="{Binding SwitchIsAutoCommand, Mode=OneWay}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Motor Overload:"
                           MinWidth="100" />
                <Button MinWidth="75"
                        Content="{Binding MotorOverload, UpdateSourceTrigger=PropertyChanged}"
                        Command="{Binding SwitchMotorOverloadCommand, Mode=OneWay}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
